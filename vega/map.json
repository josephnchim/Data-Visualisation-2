{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 400,
    "title": "Waste disposed per capita (kg)",
    "params": [
        {
            "name": "zoom_level",
            "value": 10000,
            "bind": {
                "input": "range",
                "min": 3500,
                "max": 60000,
                "step": 100,
                "name": "Zoom: "
            }
        },
        {
            "name": "center_to",
            "value": [
                145,
                -37.95
            ],
            "bind": {
                "input": "select",
                "options": [
                    [
                        145,
                        -37.95
                    ],
                    [
                        144.3,
                        -38.1
                    ],
                    [
                        145.39,
                        -36.38
                    ],
                    [
                        143.85,
                        -37.56
                    ]
                ],
                "labels": [
                    "Melbourne CBD",
                    "Geelong",
                    "Shepparton",
                    "Ballarat"
                ],
                "name": "Map Centre: "
            }
        }
    ],
    "projection": {
        "type": "mercator",
        "center": {
            "expr": "center_to"
        },
        "scale": {
            "expr": "zoom_level"
        }
    },
    "layer": [
        {
            "data": {
                "url": "vega/spatialdata/VicSuburbs.json",
                "format": {
                    "type": "topojson",
                    "feature": "LGA_2025_AUST_GDA2020"
                }
            },
            "transform": [
                {
                    "lookup": "properties.LGA_NAME25",
                    "from": {
                        "data": {
                            "url": "vega/data/Victorian-local-government-waste-data-release-notes-2025.02.csv"
                        },
                        "key": "council",
                        "fields": [
                            "totaltonnes",
                            "Population"
                        ]
                    }
                },
                {
                    "calculate": "round((datum.totaltonnes)/datum.Population*1000)",
                    "as": "Waste (kgs)"
                }
            ],
            "mark": {
                "type": "geoshape"
            },
            "encoding": {
                "color": {
                    "field": "Waste (kgs)",
                    "type": "quantitative",
                    "scale": {
                        "scheme": "reds"
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.LGA_NAME25",
                        "type": "nominal",
                        "title": "LGA"
                    },
                    {
                        "field": "Waste (kgs)",
                        "type": "quantitative"
                    }
                ]
            }
        }
    ]
}