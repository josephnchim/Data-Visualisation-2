{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 400,
    "title": "Garbage disposed per capita (kg)",
    "projection": {
        "type": "mercator"
    },
    "layer": [
        {
            "data": {
                "url": "vega/spatialdata/VicSuburbs.json",
                "format": {
                    "type": "topojson",
                    "feature": "LGA_2025_AUST_GDA2020"
                }
            },
            "transform": [
                {
                    "lookup": "properties.LGA_NAME25",
                    "from": {
                        "data": {
                            "url": "vega/data/Victorian-local-government-waste-data-release-notes-2025.02.csv"
                        },
                        "key": "council",
                        "fields": [
                            "garbage_collected_total_tonnes",
                            "Population"
                        ]
                    }
                },
                {"calculate": "round(datum.garbage_collected_total_tonnes/datum.Population*1000)", "as": "Garbage (kgs)"}
            ],
            "mark": {
                "type": "geoshape"
            },
            "encoding": {
                "color": {
                    "field": "Garbage (kgs)",
                    "type": "quantitative",
                    "scale": {
                        "scheme": "reds"
                    }
                },
                "tooltip": [
                    {"field": "properties.LGA_NAME25", "type": "nominal", "title": "LGA"},
                    {"field": "Garbage (kgs)", "type": "quantitative"}
                ]
            }
        }
    ]
}